<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
    <title>High Street Gym - Manage Blogs</title>
</head>

<body>
    <%- include("partials/header.ejs", { accessRole, firstName }) %>
    <main>
        <h2>Manage Blogs</h2>
        <section class="half-half-layout">
            <section class="blog-list">

                <span></span>
                <% let rowNumber = 1 %>
                <% for (let blog of allBlogs) { %>
                <article class="blog-card">
                    <span class="row-num"><%= rowNumber++ %></span>
                    <h5><%= blog.title %></h4>
                    <a href="/manage_blogs?edit_id=<%= blog.id %>" class="edit-link-btn">Edit</a>
                </article>
                <% } %>
            </section>
            <section class="form-container">
                <form action="/manage_blogs" method="post" class="form-grid">
                    <input type="hidden" name="blog_id" value="<%= editBlog.id %>" />
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" value="<%= editBlog.title %>" />
                    <label for="content">Content:</label>
                    <textarea name="content" id="content" rows="5"><%= editBlog.content %></textarea>
                    <input type="submit" name="action" value="delete" class="edit-btn manage-btn"/>
                    <% if (editBlog.id === "0") { %>
                    <input type="submit" name="action" value="create" class="edit-btn manage-btn"/>
                    <% } else { %>
                    <input type="submit" name="action" value="update" class="edit-btn manage-btn"/>
                    <% } %>
                </form>
            </section>
        </section>
    </main>
    <%- include("partials/footer.ejs") %>
</body>

</html>
